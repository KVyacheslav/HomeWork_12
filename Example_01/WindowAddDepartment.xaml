<Window x:Class="Example_01.WindowAddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_01"
        mc:Ignorable="d"
        Title="Окно добавления отдела" 
        Height="160" 
        Width="400"
        ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Название отдела" 
                  FontSize="16"
                  Foreground="Black"
                  FontWeight="Bold"
                  FontStyle="Oblique"
                  BorderThickness="2" 
                  BorderBrush="Aqua"
                  Margin="10">
            
            <StackPanel>
                <TextBox x:Name="tbNameDepartment"
                         TextWrapping="Wrap"
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="5"
                         Width="300"
                         Height="25"/>

                <Button x:Name="btnAdd"
                        FontWeight="Normal"
                        FontStyle="Normal"
                        Content="Добавить"
                        Margin="5"
                        Width="100" Click="btnAdd_Click"/>
            </StackPanel>

        </GroupBox>
    </Grid>
</Window>
